@model List<MVC.Models.DTOs.ZombieDTO>
@{
    ViewData["Title"] = "Listado de Zombies";
}
<h2>Listado de Zombies</h2>
<a asp-action="Create" class="btn btn-success mb-2">Nuevo Zombie</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Nivel Peligro</th>
            <th>Tipo</th>
            <th>Velocidad</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var z in Model)
        {
            <tr>
                <td>@z.Nombre</td>
                <td>@z.Edad</td>
                <td>@z.NivelPeligro</td>
                <td>@z.Tipo</td>
                <td>@z.Velocidad</td>
                <td>@z.Estado</td>
                <td>
                    <a asp-action="Details" asp-route-id="@z.Id" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@z.Id" class="btn btn-warning btn-sm">Editar</a>

                    <form asp-action="DeleteConfirmed" asp-route-id="@z.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('¿Seguro que deseas eliminar este zombie?');">
                            Eliminar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>